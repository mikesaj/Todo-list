
extends layout

block content
    
    .container
      
                   
      hr
      // Title
      .row
        .col-lg-6
                  .panel.panel-default
                   .panel-heading Location
                    //Adding Google map API for display location
                   .panel-body
                    input(id="address" type="hidden" value="#{todo_item.location}")
                    #map

        .col-lg-6
                  .panel.panel-default
                   .panel-heading Details
                    //Display details about to-do list
                   .panel-body
                    P 
                      B TASK: 
                      span #{todo_item.title}
                    hr
                    P 
                      B DATE/TIME: 
                      span #{todo_item.date}
                    hr
                    P 
                      B LOCATION: 
                      span #{todo_item.location}
                    hr
                    P 
                      B NOTES: 
                      span #{todo_item.notes}
                    hr

    // GeoCoding API library
    script( async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDbDbO6yO_piOMux3bXl3-A62OwsjctAIc&callback=initMap")